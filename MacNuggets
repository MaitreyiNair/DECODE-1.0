#include <stdio.h>

int n, k;
int count = 0;

void moderate(int u, int v, int w)
{
    
    u = u - (w-1);
    w = w - 1;
    count++;
    
    while(count>0)
    {
    if(u == v)
    {
        break;
    }
    else
    {
      
       moderate(u,v,w);
    }
}
}
int main()
{
    scanf("%d",&n);
    scanf("%d",&k);
    
    int a = n*(n+1)/2;
    
    
  if(k==a)
  {
      printf("%d",0);
  }
 else
 {
    
        moderate(a,k,n);
        printf("%d",count);
    
 }
    
}
