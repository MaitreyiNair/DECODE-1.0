#include <stdio.h>

int n, k, a;
int count = 0;
int count1 = -1;

void moduli(int x)
{
   
    count1++;
    if(x==0){
        printf("%d",count1*(count1+1)/2);
    }
    else{
        moduli(x-2-count1);
         }
}

void moderate(int u, int v, int w)
{
    while(count<w)
         {
         if(u == v)
         {
             printf("%d",count);
             break;
         }
        if(v == 0)
             {
                 moduli(w);
                 //int count2 = count1+1;
                 //int c = count1*(count1+1)/2;
                 
                 break;
             }
         
         else
              {
                 count++;
                 moderate(u-w-1,v,w-1);
              }

}
}
int main()
{
    scanf("%d",&n);
    scanf("%d",&k);
    
    a = n*(n+1)/2;
    
  if(k==a)
  {
      printf("%d",0);
  }
 else
 {
    moderate(a,k,n);
 }
}
